// Reaz's Calculator
#include <iostream>
#include <string>

using namespace std;

int main(){
    
    int choice; 
    double num1;
    double num2; 
    //Menu
    cout << "My Calculator\n"; 
    cout << "\n";
    cout << "1. Addition\n"; 
    cout << "2. Subtraction\n";
    cout << "3. Multiplication\n";
    cout << "4. Division\n";
    cout << "5. Quit\n";
    cout << "\n";
    cout << "Enter your choice (1-5):\n"; 
    
    cin >> choice; 
    
    
    switch (choice) {
        
        case 1 : 
            cout << "Enter first number\n";
            cin >> num1;
            cout << "Now enter second number\n";
            cin >> num2; 
            cout << num1 + num2 << endl; 
            break;
        case 2:
            cout << "Enter first number\n";
            cin >> num1;
            cout << "Now enter second number\n";
            cin >> num2; 
            cout << num1 - num2 << endl;
            break;        
        case 3:
            cout << "Enter first number\n";
            cin >> num1;
            cout << "Now enter second number\n";
            cin >> num2; 
            cout << num1 * num2 << endl;
            break;
        case 4:
            cout << "Enter first number\n";
            cin >> num1;
            cout << "Now enter second number\n";
            cin >> num2;
            if (num2 == 0) {
                cout << "Divide by zero error\n";
            }
            cout << num1 / num2 << endl;
            break;
        case 5:
            cout << "bye\n";
            exit(0);
        
        default:
            cout << "Invalid entry\n"; 
    }



}
